{% extends 'base.html.twig' %}

{% block title %}All articles by Category{% endblock %}

{% block body %}
    <h1>Javascript from article s table : </h1>
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
   {% endfor %}


    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}